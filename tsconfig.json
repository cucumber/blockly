{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2019",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
  }
}
